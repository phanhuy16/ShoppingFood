@model ContactModel

@{
	ViewData["Title"] = "Edit Contact";
}

<main>
	<div class="container-fluid px-4">
		<h1 class="mt-4">Edit Contact</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
			<li class="breadcrumb-item active">Edit category</li>
		</ol>
		<form asp-action="Edit" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="@Model.Name" type="hidden" />
			<div class="row">
				<div class="col-md">
					<div class="form-group">
						<label class="form-label">Name</label>
						<input asp-for="@Model.Name" class="form-control" type="text" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label">Email</label>
						<input asp-for="@Model.Email" class="form-control" type="email" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label">Address</label>
						<input asp-for="@Model.Address" class="form-control" type="text" />
						<span asp-validation-for="Address" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label">Phone</label>
						<input asp-for="@Model.Phone" class="form-control" type="text" />
						<span asp-validation-for="Phone" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label">Message</label>
						<textarea asp-for="@Model.Message" class="form-control"></textarea>
						<span asp-validation-for="Message" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md">
					<div class="form-group">
						<label class="form-label">Map</label>
						<textarea asp-for="@Model.Map" rows="4" class="form-control"></textarea>
						<span asp-validation-for="Map" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="form-label">Image</label>
						<!-- Hiển thị ảnh hiện tại -->
						<div class="mb-2">
							<label for="inputGroupFile01">
								<img src="~/media/contacts/@Model.Logo" alt="@Model.Name" style="width: 120px; height: 120px; object-fit: cover; border: 1px solid #ccc; border-radius: 5px; padding: 2px;" />
								<img id="imgpreview" style="object-fit: cover; border: 1px solid #ccc; border-radius: 5px; padding: 2px;" />
							</label>
						</div>
						<!-- Upload file -->
						<input asp-for="LogoUpload" class="form-control d-none" type="file" accept="image/*" id="inputGroupFile01" />
						<span asp-validation-for="LogoUpload" class="text-danger"></span>
					</div>

				</div>
			</div>
			<div class="my-3">
				<button class="btn btn-sm btn-primary">Submit</button>
				<button class="btn btn-sm btn-outline-secondary" asp-action="Index">Cancel</button>
			</div>
		</form>
	</div>
</main>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js" asp-append-version="true"></script>
	<script>
		CKEDITOR.replace("Detail", {
			removePlugins: "update-notifier", // Tắt thông báo cập nhật CKEditor
			disableNativeSpellChecker: false // Giữ kiểm tra chính tả nếu cần
		});

		$('#inputGroupFile01').change(function(){
			readURL(this);
		});
	</script>
}