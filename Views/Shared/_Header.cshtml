<!-- Navbar start -->
<div class="container-fluid fixed-top">
	<div class="container topbar bg-primary d-none d-lg-block">
		<div class="d-flex justify-content-between">
			<div class="top-info ps-2">
				<small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">123 Street, New York</a></small>
				<small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Email@Example.com</a></small>
			</div>
			<div class="top-link pe-2">
				<a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
				<a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
				<a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
			</div>
		</div>
	</div>
	<div class="container px-0">
		<nav class="navbar navbar-light bg-white navbar-expand-xl">
			<a asp-action="Index" asp-controller="Home" class="navbar-brand"><h1 class="text-primary display-6">Fruitables</h1></a>
			<button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
				<span class="fa fa-bars text-primary"></span>
			</button>
			<div class="collapse navbar-collapse bg-white" id="navbarCollapse">
				<div class="navbar-nav mx-auto">
					<a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
					<a asp-action="Index" asp-controller="Product" class="nav-item nav-link">Shop</a>
					<a asp-action="Index" asp-controller="Category" class="nav-item nav-link">Categories</a>
					<div class="nav-item dropdown">
						<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
						<div class="dropdown-menu m-0 bg-secondary rounded-0">
							<a asp-action="CheckOut" asp-controller="Cart" class="dropdown-item">CheckOut</a>
							<a asp-action="Index" asp-controller="Error" class="dropdown-item">404 Page</a>
						</div>
					</div>
					<a asp-action="Contact" asp-controller="Home" class="nav-item nav-link">Contact</a>
				</div>
				<div class="d-flex m-3 me-0">
					<button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
					<a asp-action="Index" asp-controller="Cart" class="position-relative me-1 my-auto">
						<i class="fa fa-shopping-bag fa-2x"></i>
						<span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
					</a>
					@if (User.Identity.IsAuthenticated)
					{
						<div class="nav-item dropdown">
							<a asp-action="Profile" asp-controller="Account" class="my-auto nav-link dropdown-toggle">
								 <i class="fas fa-user-check fa-2x"></i> 
							</a>
							<div class="dropdown-menu m-0 bg-secondary rounded-0">
								<span class="dropdown-item"> Hi, @User.Identity.Name </span>
								<a asp-action="Logout" asp-controller="Account" class="dropdown-item"> <i class="fas fa-sign-out-alt"></i> Logout </a>
							</div>
						</div>
					}
					else
					{
						<div class="nav-item dropdown">
							<a asp-action="Login" asp-controller="Account" class="my-auto nav-link dropdown-toggle">
								<i class="fas fa-user fa-2x"></i>
							</a>
							<div class="dropdown-menu m-0 bg-secondary rounded-0">
								<a asp-action="Login" asp-controller="Account" class="dropdown-item"> <i class="fas fa-sign-in-alt"></i> Sign in </a>
								<a asp-action="Register" asp-controller="Account" class="dropdown-item"> <i class="fas fa-user-plus"></i> Sign up </a>
							</div>
						</div>
					}
				</div>
			</div>
		</nav>
	</div>
</div>
<!-- Navbar End -->