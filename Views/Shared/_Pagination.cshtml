@model ShoppingFood.Models.Paginate

<div class="container">
	@if (Model.TotalPages > 0) //2 trang
	{
		<div class="col-12">
			<div class="pagination d-flex justify-content-center mt-5">
				@if (Model.CurrentPage > 1)
				{
					<a asp-action="Index" asp-route-page="1" class="rounded">&laquo;</a>
				}
				else
				{
					@if (Model.CurrentPage == 1)
					{
						<a class="rounded">&laquo;</a>
					}
					else
					{
						<a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="rounded">&laquo;</a>
					}
				}
				@for (var pge = Model.StartPage; pge <= Model.EndPage; pge++) //1 = 1 <= 2
				{
					<a class="@(pge==Model.CurrentPage ? "active" : "") rounded" asp-action="Index" asp-route-page="@pge">@pge</a>
				}
				@if (Model.CurrentPage < Model.TotalPages)
				{
					<a class="rounded" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">&raquo;</a>
				}
				else
				{
					<a class="rounded">&raquo;</a>
				}
			</div>
		</div>
	}
</div>